{% extends "layouts/default.njk" %}

{% block documentTitle %}Forside{% endblock %}
{% block documentDescription %}
  Nybys køreskole, få kørekort hos byens rareste kørelærer
{% endblock %}
{% block documentKeywords %}
  køreskole, kørekort, odense, fyn, lære, køre
{% endblock %}

{% block bodyCLass %}{% endblock %}


{% block content %}
  <!-- Banner -->
  <section id="banner">
    <div class="banner__inner inner">
      <header class="banner__header">
        <h1 class="banner__title">Velkommen til Nybys køreskole</h1>
        <p class="banner__text">God og spændende undervisning, rar kørerlærer, overkommelig pris i Odense SØ.</p>
      </header>

      <div class="banner__content flex flex-3">
        <div class="banner__column flex__cell">
          <span class="banner__icon icon fa-usd"></span>
          <h3 class="banner__subtitle">Tilbud: fuld lovpakke</h3>
          <p class="banner__text">Kun kr. 12.300</p>
        </div>

        <div class="banner__column flex__cell">
          <span class="banner__icon icon fa-users"></span>
          <h3 class="banner__subtitle">Eleven er i centrum</h3>
          <p class="banner__text">Nogen super god tekst her</p>
        </div>

        <div class="banner__column flex__cell">
          <span class="banner__icon icon fa-car"></span>
          <h3 class="banner__subtitle">Kontakt os på</h3>
          <p class="banner__text"><a href="tel:004522255152">22 25 51 52</a></p>
        </div>
      </div>

      <footer>
        <a href="prices.html" class="button">Se vores priser</a>
      </footer>
    </div>
  </section>

  <!-- Three -->
  <section id="three" class="wrapper align-center">
    <div class="inner">
      <div class="flex flex-2">
        <article>
          <div class="image round">
            <img src="/images/lokalet.jpg" alt="Undervisningslokalet" />
          </div>
          <header>
            <h3>Holdinfo</h3>
          </header>
          <p>
            <strong>Undervisningsdage:</strong> <br>
            mandage & onsdage, kl. 17:00 til 20:00
          </p>
          <p>
            <strong>Holdstart:</strong> <br>
            Én gang om måneden
          </p>
          <footer>
            <a href="#" class="button">Læs mere</a>
          </footer>
        </article>
        <article>
          <div class="image round">
            <img src="/images/study.jpg" alt="Bøger og en kaffe" />
          </div>
          <header>
            <h3>Tilbud</h3>
          </header>
          <p>
            <strong>Fuld lovpakke:</strong><br>
            Færdselsrelateret førstehjælp <br>
            Grupperabat: kr. 500 pr. person
          <p>
            <strong>Kun kr. 12.300</strong>
          </p>
          <footer>
            <a href="#" class="button">Læs mere</a>
          </footer>
        </article>
      </div>
    </div>
  </section>
{% endblock %}
